<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="576.0" prefWidth="1008.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClientsController">
   <center>
      <TableView fx:id="clientsTable" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="nomCol" prefWidth="75.0" text="Nom" />
            <TableColumn fx:id="prenomCol" prefWidth="75.0" text="Prénom" />
            <TableColumn fx:id="numeroCol" prefWidth="75.0" text="Numéro de téléphone" />
            <TableColumn fx:id="adresseCol" prefWidth="75.0" text="Adresse" />
         </columns>
      </TableView>
   </center>
</BorderPane>
